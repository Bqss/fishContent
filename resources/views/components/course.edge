@elseif(isAdmin)
<section
    class="flex flex-col relative hover:z-10 transition-all ring-2 ring-gray-200 h-max duration-700 ease-in gap-10 bg-gradient-to-r  from-white  to-gray-100 px-8 py-12 rounded-xl shadow-md   hover:shadow-3xl">
    <div class="rounded-xl">
        <img src={{img}} alt="cupang" class="h-full object-cover" alt="edukasi" />
    </div>
    <div class="group">
        <h3 class="text-xl font-bold mb-3 peer">{{title}}</h3>
        <p
            class="text-sm line-clamp-2 mb-12 hover:cursor-pointer max-h-10 peer-hover:line-clamp-none peer-hover:max-h-80 transition-[max-height] overflow-hidden duration-700">
            {{desc}}
        </p>
        <a role="button" href={{link}}
            class=" text-sm sm:text-base px-5 py-2 rounded-xl transition-all duration-300 btn-third">Belajar
            sekarang</a>
    </div>
    <button class="absolute z-40 top-1.5 right-1.5" id="opt-controls" aria-expanded="false">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="w-6 h-6">
            
            <path
                d="M120 256c0 30.9-25.1 56-56 56s-56-25.1-56-56s25.1-56 56-56s56 25.1 56 56zm160 0c0 30.9-25.1 56-56 56s-56-25.1-56-56s25.1-56 56-56s56 25.1 56 56zm104 56c-30.9 0-56-25.1-56-56s25.1-56 56-56s56 25.1 56 56s-25.1 56-56 56z" />
        </svg>
    </button>
    <div class="flex absolute invisible top-8 -right-24 dropdown flex-col z-40 py-2 rounded-md shadow-md bg-gray-200"
        aria-controls="opt-controls" aria-modal="true">
        <button class=" text-left py-2 px-4  hover:bg-gray-50">
            <svg class="w-5 h-5 inline-block mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                <!--! Font Awesome Pro 6.2.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. -->
                <path
